<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewUserActivity">

    <TextView
        android:id="@+id/ReturnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ReturnButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="87dp"
        android:layout_marginLeft="87dp"
        android:layout_weight="1"
        android:text="Already Registered?  "
        android:textColor="#0B5345"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/NameRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/UsernameRegister"
        android:layout_alignLeft="@+id/UsernameRegister"
        android:layout_below="@+id/RegisterTitle"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Name"
        android:visibility="visible"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="101dp" />

    <EditText
        android:id="@+id/UsernameRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NameRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Email"
        android:visibility="visible"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="101dp" />

    <TextView
        android:id="@+id/RegisterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:textColor="#52BE80"
        android:textSize="44sp"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="75dp" />

    <EditText
        android:id="@+id/PasswordRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/UsernameRegister"
        android:layout_alignLeft="@+id/UsernameRegister"
        android:layout_below="@+id/UsernameRegister"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/PasswordCheckRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/PasswordRegister"
        android:layout_alignLeft="@+id/PasswordRegister"
        android:layout_below="@+id/PasswordRegister"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/RegisterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="276dp"
        android:onClick="Return"
        android:text="Register"
        android:textColor="@color/lightGreen"
        android:theme="@style/MyButton"
        android:background="@drawable/button_shape"/>


    <Button
        android:id="@+id/ReturnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="85dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:onClick="LoginReturn"
        android:text="Click here!"
        android:textAllCaps="false"
        android:textColor="#0B5345" />



</RelativeLayout>